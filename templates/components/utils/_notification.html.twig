<div class="toast-container position-fixed top-0 end-0 p-3">
    <div
        class="toast text-bg-{{ type }} p-2"
        data-notification="{{ name }}"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
    >
        <div class="d-flex">
            <div class="toast-body">
                {{ text }}
            </div>
            <button
                type="button"
                class="btn-close btn-close-white me-2 m-auto"
                data-bs-dismiss="toast"
                aria-label="Close"
            ></button>
        </div>
    </div>
</div>
